<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/main_page"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black" />

    </androidx.appcompat.widget.Toolbar>

    <Button
        android:id="@+id/addUser"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:text="@string/addMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <Button
        android:id="@+id/sign"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:text="@string/sign"
        app:layout_constraintEnd_toEndOf="@+id/addUser"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/addUser"
        app:layout_constraintTop_toBottomOf="@+id/search_user" />

    <Button
        android:id="@+id/sign_result"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:text="@string/sign_result"
        app:layout_constraintEnd_toEndOf="@+id/addUser"
        app:layout_constraintStart_toStartOf="@+id/addUser"
        app:layout_constraintTop_toBottomOf="@+id/sign" />

    <Button
        android:id="@+id/login_out"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:text="@string/login_out"
        app:layout_constraintEnd_toEndOf="@+id/addUser"
        app:layout_constraintStart_toStartOf="@+id/addUser"
        app:layout_constraintTop_toBottomOf="@+id/sign_result" />

    <Button
        android:id="@+id/search_user"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:text="查看用户"
        app:layout_constraintEnd_toEndOf="@+id/addUser"
        app:layout_constraintStart_toStartOf="@+id/addUser"
        app:layout_constraintTop_toBottomOf="@+id/addUser" />

</androidx.constraintlayout.widget.ConstraintLayout>